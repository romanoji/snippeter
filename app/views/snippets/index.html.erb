<% title 'Recent snippets' %>

<%= javascript_include_tag "injects/rows_clickable", "data-turbolinks-track" => true %>

<div class="page-header">
  <%= link_to new_snippet_path, :class => 'btn btn-add' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Snippet
  <% end %>
  <h1>Recent snippets</h1>
</div>

<% if @snippets.size > 0 %>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th style="">Snippet</th>
        <th style="width: 100px;">Lang</th>
        <th style="">Description</th>
        <th style="width: 220px;">Last modification</th>
        <th style="width: 100px;"></th>
        <th style="width: 100px;"></th>
      </tr>
    </thead>

    <tbody>
      <% @snippets.each do |snippet| %>
        <tr class="row-link" data-link=<%= snippet_path(snippet) %>>
            <td class="snippet-notion"><%= snippet.snippet %></td>
            <td><%= snippet.lang.name %></td>
            <td><%= snippet.description %></td>
            <td><%= snippet.updated_at.in_time_zone('Warsaw').to_formatted_s(:rfc822) %></td>
            <td class="centered">
              <%= link_to edit_snippet_path(snippet), class: 'btn btn-edit fullsized' do %>
                <span class="glyphicon glyphicon-pencil"></span>
              <% end %>
            </td>
            <td class="centered">
              <%= link_to snippet, method: :delete, data: { confirm: 'Do you really want to delete this snippet?' }, class: 'btn btn-remove fullsized' do %>
                <span class="glyphicon glyphicon-remove"></span>
              <% end %>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div id="infinite-scrolling">
  <%= will_paginate %>
</div>
<% else %>
    <em>No snippets found.</em>
<% end %>